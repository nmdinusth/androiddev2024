<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherAndForecastFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/fragment_weather"
            tools:ignore="MissingConstraints"
            android:id ="@+id/weather"
            android:name="vn.edu.usth.usthweatherfix.WeatherFragment">
        </fragment>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forecast"
            android:name="vn.edu.usth.usthweatherfix.ForecastFragment"
            android:layout="@layout/fragment_forecast"
            tools:ignore="MissingConstraints">
        </fragment>
    </LinearLayout>
</ScrollView>


